{
  "coc.preferences.formatOnSaveFiletypes": ["elixir", "go"],
  "codeLens.enable": false,
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "◉",
  "suggest.completionItemKindLabels": {
    "module": " ",
    "function": "ﬦ",
    "variable": "ﮂ"
  },
  "suggest.snippetIndicator": "\u26a1 ",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  }
}
